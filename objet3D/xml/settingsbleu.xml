		<rotate_right>Rotate right</rotate_right>
		
		<reset>Reset</reset>
		
		<zoom_slider>Zoom zoom_number%</zoom_slider>
		<zoom_in>Zoom In</zoom_in>
		<zoom_out>Zoom Out</zoom_out>
		
		<hyperlink>Hyperlink</hyperlink>
	</tooltips_texts>
	
